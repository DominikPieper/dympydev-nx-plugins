version: "3.7"

services:
  pocketbase-<%= kebabName %>:
    image: ghcr.io/muchobien/pocketbase:latest
    container_name: pocketbase-<%= kebabName %>
    ports:
      - <%= appPort %>:8090
    volumes:
      - ./data:/pb_data
      - ./public:/pb_public
    healthcheck:
      test: wget --no-verbose --tries=1 --spider http://localhost:8090/api/health || exit 1
      interval: 5s
      timeout: 5s
      retries: 5
